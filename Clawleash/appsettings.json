{
  "AI": {
    "Endpoint": "https://api.openai.com/v1",
    "ApiKey": "",
    "ModelId": "gpt-4o"
  },
  "Sandbox": {
    "Type": "AppContainer",
    "DockerImage": "mcr.microsoft.com/powershell:7.4",
    "AppContainerName": "Clawleash.Sandbox"
  },
  "FileSystem": {
    "AllowedDirectories": [ "C:\\Work", ".\\workspace" ],
    "MaxFileSizeMB": 10
  },
  "PowerShell": {
    "PowerShellPath": "pwsh",
    "Mode": "Whitelist",
    "AllowedCommands": [ "Get-ChildItem", "Get-Content", "Write-Output", "Get-Date", "Get-Location" ],
    "DeniedCommands": [ "Remove-Item", "Format-Volume", "Remove-Variable" ],
    "TimeoutSeconds": 30
  },
  "Browser": {
    "AllowedDomains": [ "*" ],
    "DeniedDomains": [],
    "Headless": true,
    "ScreenshotOnAction": true
  },
  "ChatInterface": {
    "EnableCli": true,
    "InterfacesDirectory": null,
    "EnableHotReload": true,
    "Discord": {
      "Enabled": false,
      "Token": "",
      "CommandPrefix": "!"
    },
    "Slack": {
      "Enabled": false,
      "BotToken": "",
      "AppToken": ""
    },
    "WebSocket": {
      "Enabled": false,
      "ServerUrl": "ws://localhost:8080/chat",
      "EnableE2ee": true,
      "ReconnectIntervalMs": 5000,
      "MaxReconnectAttempts": 10
    },
    "WebRtc": {
      "Enabled": false,
      "SignalingServerUrl": "ws://localhost:8080/signaling",
      "EnableE2ee": true,
      "StunServers": [ "stun:stun.l.google.com:19302" ]
    }
  }
}
